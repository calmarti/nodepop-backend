{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {

        "undef": 1,
        "unused": 1,
        "semi": ["error", "always"],
        "quotes": ["warn", "single"]
    }
}
